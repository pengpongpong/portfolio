---
import "@styles/components/projects.scss";
import type { Locale } from "@utils/utils";

type Props = {
    header: {
        headline: string;
        year: number;
        type: string;
    };
    list: { title: string }[];
    url: string;
    data: {
        responsibility: string;
        role: string;
        url: string;
        about: string;
    };
    lang: Locale;
};

const { header, list, url, data, lang }: Props = Astro.props;
---

<main>
    <header>
        <h1>{header?.headline}</h1>
        <div>
            <span>{header?.year}</span>
            <h2>{header?.type}</h2>
        </div>
    </header>
    <div>
        <section class="list">
            <ul>
                {
                    list.map((tag: { title: string }) => {
                        return (
                            <li>
                                <div>{tag.title}</div>
                            </li>
                        );
                    })
                }
            </ul>
        </section>
        <section class="box-info">
            <div>
                <div>
                    <h3>
                        {lang === "en" ? "Responsibility:" : "Verantwortung:"}
                    </h3>
                    <p>{data?.responsibility}</p>
                </div>
                <div>
                    <h3>{lang === "en" ? "Role:" : "Rolle:"}</h3>
                    <p>{data?.role}</p>
                </div>
                <div>
                    <h3>Website:</h3>
                    <p>{data?.url}</p>
                </div>
            </div>
            <a
                href={`https://${url}`}
                target="_blank"
                rel="noreferrer noopener"
                aria-label={`Visit live page for Project ${header?.headline}`}
            >
                <span> {lang === "en" ? "View live" : "Live sehen"}</span>
            </a>
        </section>
        <section class="box-about">
            <div>
                <h3>{lang === "en" ? "About:" : "Ãœber das Projekt:"}</h3>
                <p>{data?.about}</p>
            </div>
        </section>
    </div>
</main>
